        <li><a href="#"><i class="fa fa-dashboard"></i> Level</a></li>
        <li class="active">Here</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content container-fluid">
<c:if test="${msg =='ChangeFail' or empty msg}">    
 <form id="adminForm" action="/admin/adminPWChange" method="post">

	<label for="admin_id"><b>아이디</b></label>
    <input type="text" id="admin_id" name="admin_id" value="${sessionScope.adminStatus.admin_id }" readonly>
	<label for="admin_cpw"><b>현재 비밀번호</b></label>
    <input type="password" placeholder="현재 비밀번호 입력" id="admin_cpw" name="admin_cpw" required>
    <label for="admin_npw"><b>새 비밀번호</b></label>
    <input type="password" placeholder="새 비밀번호 입력" id="admin_npw" name="admin_npw" required>
    <label for="admin_nnpw"><b>새 비밀번호 확인</b></label>
    <input type="password" placeholder="새 비밀번호 확인" id="admin_nnpw" required>
    <p id="pwMsg"></p>
    <button type="submit" id="btnModify">변경</button>
</form>
</c:if>
<c:if test="${msg == 'PWChanged' }">
	<h4>비밀번호가 변경 되었습니다.</h4>
</c:if>
