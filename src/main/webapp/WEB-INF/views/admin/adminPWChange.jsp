<script>
  $(document).ready(function(){

    $("#adminForm").on("submit", function(){

      if($("#admin_npw").val() != $("#admin_nnpw").val()){
        //alert("비밀번호가 일치하지않습니다.");
        $("#pwMsg").html("새 비밀번호가 일치하지않습니다.");
        return false;
      }
      //$("#adminForm").submit();
    });
  });

  let msg = "${msg}";
